{
  "manifest_version": 3,
  "name": "Auto Wi-Fi Login - Seamless",
  "version": "2.3.0",
  "description": "Seamless auto-login for captive portals with instant detection and video position restoration.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/scripts/background-seamless.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://192.168.1.254:8090/*", 
        "http://192.168.1.254:8090/*",
        "http://192.168.1.254/*",
        "https://192.168.1.254/*"
      ],
      "js": ["src/scripts/autologin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/connectivity-check.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "src/ui/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "Auto Wi-Fi Login - Seamless"
  }
}
